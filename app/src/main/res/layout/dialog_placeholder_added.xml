<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_default">

    <!-- Success Icon -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_trip_code"
        android:contentDescription="Sukces"
        android:tint="@color/success"
        android:layout_marginBottom="@dimen/spacing_medium"/>

    <!-- Nickname -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/spacing_medium">

        <TextView
            style="@style/Text.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UCZESTNIK"/>

        <TextView
            android:id="@+id/nicknameText"
            style="@style/Text.Body.Large"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jan Kowalski"
            android:layout_marginTop="@dimen/spacing_tiny"/>
    </LinearLayout>

    <!-- Access Code Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="@color/primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_default"
            android:gravity="center">

            <TextView
                style="@style/Text.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KOD DOSTĘPU"
                android:textColor="@android:color/white"
                android:alpha="0.8"/>

            <TextView
                android:id="@+id/accessCodeText"
                style="@style/Text.Display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLCH-0001"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/spacing_tiny"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Info Text -->
    <TextView
        style="@style/Text.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wyślij ten kod uczestnikowi, aby mógł dołączyć do wycieczki. Kod będzie również widoczny na liście uczestników."
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/spacing_medium"/>

    <!-- Copy Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/copyCodeButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kopiuj kod"
        app:icon="@drawable/ic_trip_code"
        app:iconGravity="start"/>

</LinearLayout>