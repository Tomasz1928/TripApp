<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Card.Trip"
    android:layout_width="@dimen/trip_card_width"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_default">

        <!-- Title -->
        <TextView
            android:id="@+id/tripTitle"
            style="@style/Text.Title.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zakopane 2024"
            android:layout_marginTop="@dimen/spacing_small"/>

        <!-- Date -->
        <TextView
            android:id="@+id/tripDate"
            style="@style/Text.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 - 15 Grudnia 2024"
            android:layout_marginTop="@dimen/spacing_tiny"/>

        <!-- Total -->
        <TextView
            android:id="@+id/tripTotal"
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 250 zÅ‚"
            android:layout_marginBottom="@dimen/spacing_small"/>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginVertical="@dimen/spacing_medium"/>

        <!-- PieChart + Legend -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="1dp">

            <!-- PieChart -->
            <com.example.tripapp2.ui.common.widget.PieChartView
                android:id="@+id/pieChart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="start"/>

            <!-- Legend ScrollView -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <LinearLayout
                    android:id="@+id/legendContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/spacing_small"
                    android:paddingEnd="@dimen/spacing_small"/>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginVertical="@dimen/spacing_medium"/>

        <!-- Buttons -->
        <Button
            android:id="@+id/detailsBtn"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trip_card_details_button"
            android:layout_marginTop="@dimen/spacing_small"/>

        <Button
            android:id="@+id/costDetailsBtn"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trip_card_view_costs_button"
            android:layout_marginTop="@dimen/spacing_small"/>

        <Button
            android:id="@+id/addCostBtn"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trip_card_add_cost_button"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_small"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>