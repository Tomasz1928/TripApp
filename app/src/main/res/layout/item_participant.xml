<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">

        <!-- Header: Nickname + Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Nickname -->
            <TextView
                android:id="@+id/participantNickname"
                style="@style/Text.Body.Large"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Anna"/>

            <!-- Owner Badge -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ownerBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                android:visibility="gone"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/primary">

                <TextView
                    style="@style/Text.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="WŁAŚCICIEL"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="10sp"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Active User Badge -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/activeBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                android:visibility="gone"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/success">

                <TextView
                    style="@style/Text.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="AKTYWNY"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="10sp"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Placeholder Badge -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/placeholderBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                android:visibility="gone"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/warning">

                <TextView
                    style="@style/Text.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="OCZEKUJE"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="10sp"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Expenses -->
        <TextView
            android:id="@+id/participantExpenses"
            style="@style/Text.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Wydatki: 450,00 PLN"/>

        <!-- Access Code Section (only for placeholders) -->
        <LinearLayout
            android:id="@+id/accessCodeSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/spacing_small"
            android:visibility="gone">

            <!-- Separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginBottom="@dimen/spacing_small"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/accessCodeText"
                    style="@style/Text.Body.Bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PLCH-0001"
                    android:textColor="@color/primary"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/copyCodeButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_trip_code"
                    android:contentDescription="Kopiuj kod"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="2dp"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons (only for owner) -->
        <LinearLayout
            android:id="@+id/actionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:visibility="gone">

            <!-- Detach Button (for active users) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/detachButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Odłącz"
                android:textColor="@color/warning"
                android:textSize="12sp"
                android:minHeight="32dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:visibility="gone"
                app:iconSize="14dp"
                app:iconPadding="4dp"/>

            <!-- Delete Button (for placeholders) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuń"
                android:textColor="@color/error"
                android:textSize="12sp"
                android:minHeight="32dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:visibility="gone"
                app:iconSize="14dp"
                app:iconPadding="4dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>