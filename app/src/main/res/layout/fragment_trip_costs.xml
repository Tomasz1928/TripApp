<?xml version="1.0" encoding="utf-8"?>
<!--
    Trip Costs Fragment Layout
    Struktura: Obrazek (35%) → Nagłówek (Filtry) → Treść (Lista wydatków)
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- ================================== -->
    <!-- HEADER IMAGE - 35% wysokości ekranu -->
    <!-- ================================== -->
    <FrameLayout
        android:id="@+id/headerImageContainer"
        style="@style/HeaderImageContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35">

        <ImageView
            android:id="@+id/headerImage"
            style="@style/HeaderImage"
            android:src="@drawable/header_l_cost_list"/>
    </FrameLayout>

    <!-- ================================== -->
    <!-- NAGŁÓWEK - Tytuł sekcji (WYŚRODKOWANY) -->
    <!-- ================================== -->
    <TextView
        android:id="@+id/costsTitle"
        style="@style/Text.Heading.Screen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/nav_costs"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/headerImageContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================================== -->
    <!-- FILTRY - Przewijalne poziomo -->
    <!-- ================================== -->
    <HorizontalScrollView
        android:id="@+id/filtersScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small"
        app:layout_constraintTop_toBottomOf="@id/costsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/filtersContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/padding_default"
            android:paddingEnd="@dimen/padding_default">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterAll"
                style="@style/Button.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trip_costs_filter_all"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterMine"
                style="@style/Button.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trip_costs_filter_mine"
                android:layout_marginStart="@dimen/spacing_tiny"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterPaidByMe"
                style="@style/Button.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trip_costs_filter_paid_by_me"
                android:layout_marginStart="@dimen/spacing_tiny"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterPaidByOthers"
                style="@style/Button.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trip_costs_filter_paid_by_others"
                android:layout_marginStart="@dimen/spacing_tiny"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/searchButton"
                style="@style/Button.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trip_costs_search"
                android:icon="@drawable/ic_calendar"
                app:iconSize="@dimen/icon_size_small"
                app:iconPadding="@dimen/spacing_tiny"
                android:layout_marginStart="@dimen/spacing_small"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- ================================== -->
    <!-- TREŚĆ - Lista wydatków -->
    <!-- ================================== -->
    <ScrollView
        android:id="@+id/scrollExpensesContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/filtersScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/expensesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_default"
            android:paddingEnd="@dimen/padding_default"
            android:paddingTop="@dimen/spacing_small"
            android:paddingBottom="@dimen/bottom_nav_padding"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
