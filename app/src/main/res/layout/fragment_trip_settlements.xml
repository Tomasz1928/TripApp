<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Header Image -->
    <FrameLayout
        android:id="@+id/headerImageContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25">

        <ImageView
            android:id="@+id/headerImage"
            style="@style/HeaderImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header_trip_details"/>
    </FrameLayout>

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="@dimen/icon_size_xxlarge"
        android:layout_height="@dimen/icon_size_xxlarge"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:padding="@dimen/padding_small"
        android:src="@drawable/ic_back_arrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/cd_back_button"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewSettlements"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/headerImageContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_default">

            <!-- Title -->
            <TextView
                android:id="@+id/settlementTitle"
                style="@style/Text.Heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Podsumowanie Rozliczeń"
                android:layout_marginBottom="@dimen/spacing_small"/>

            <!-- User Balance Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/balanceCard"
                style="@style/Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/card_corner_radius_large"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_default">

                    <!-- Balance Amount -->
                    <TextView
                        android:id="@+id/balanceAmount"
                        style="@style/Text.Display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+128,33 EUR"
                        android:textColor="@color/success"/>

                    <!-- Balance Status -->
                    <TextView
                        android:id="@+id/balanceStatus"
                        style="@style/Text.Body.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settlements_balance_positive"
                        android:textColor="@color/success"
                        android:layout_marginTop="@dimen/spacing_tiny"/>

                    <!-- Separator -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginVertical="@dimen/spacing_medium"/>

                    <!-- Breakdown -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Owed to You -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Text.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settlements_owed_to_you"/>

                            <TextView
                                android:id="@+id/owedToYou"
                                style="@style/Text.Body.Bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="156,67 EUR"
                                android:textColor="@color/success"
                                android:layout_marginTop="@dimen/spacing_tiny"/>
                        </LinearLayout>

                        <!-- You Owe -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                style="@style/Text.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settlements_you_owe"/>

                            <TextView
                                android:id="@+id/youOwe"
                                style="@style/Text.Body.Bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28,34 EUR"
                                android:textColor="@color/error"
                                android:layout_marginTop="@dimen/spacing_tiny"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Trip Name Label -->
            <TextView
                android:id="@+id/tripNameLabel"
                style="@style/Text.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Włochy - Lato"
                android:layout_marginBottom="@dimen/spacing_small"/>

            <!-- Relations Container -->
            <LinearLayout
                android:id="@+id/relationsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/padding_large"
                android:visibility="gone">

                <TextView
                    style="@style/Text.Body.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settlements_all_settled"
                    android:textColor="@color/success"
                    android:textAlignment="center"/>

                <TextView
                    style="@style/Text.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="@string/settlements_all_settled_description"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>