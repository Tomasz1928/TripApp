<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Card.Modal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/modal_margin"
    android:background="@color/surface">

    <LinearLayout
        android:id="@+id/modalRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_default">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/modalTitle"
                style="@style/Text.Title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Nagłówek modala"/>

            <ImageView
                android:id="@+id/closeButton"
                android:layout_width="@dimen/modal_close_button_size"
                android:layout_height="@dimen/modal_close_button_size"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="@string/cd_close_button"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/padding_tiny"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_small"/>

        <!-- Body (dynamic content) -->
        <FrameLayout
            android:id="@+id/modalBodyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>