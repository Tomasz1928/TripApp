<?xml version="1.0" encoding="utf-8"?>
<!--
    Join Trip Fragment Layout
    Struktura: Obrazek (35%) → Nagłówek → Treść formularza
-->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollViewJoinTrip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/bottom_nav_padding">

        <!-- ================================== -->
        <!-- HEADER IMAGE - 35% wysokości ekranu -->
        <!-- ================================== -->
        <FrameLayout
            android:id="@+id/headerImageContainer"
            style="@style/HeaderImageContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.25">

            <ImageView
                android:id="@+id/headerImage"
                style="@style/HeaderImage"
                android:src="@drawable/header_l_join_trip"/>
        </FrameLayout>

        <!-- ================================== -->
        <!-- NAGŁÓWEK WIDOKU -->
        <!-- ================================== -->
        <TextView
            android:id="@+id/title"
            style="@style/Text.Display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/join_trip_title"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_medium"
            app:layout_constraintTop_toBottomOf="@id/headerImageContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- ================================== -->
        <!-- TREŚĆ - Formularz dołączania -->
        <!-- ================================== -->

        <!-- Access Code Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TripJoinLayout"
            style="@style/InputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/TripJoinInput"
                style="@style/InputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/join_trip_code_hint"
                android:inputType="textCapCharacters"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Join Button -->
        <Button
            android:id="@+id/JoinTripBtn"
            style="@style/Button.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="@string/join_trip_button"
            app:layout_constraintTop_toBottomOf="@id/TripJoinLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
