<?xml version="1.0" encoding="utf-8"?>
<!--
    Create Trip Fragment Layout
    Struktura: Obrazek (35%) → Nagłówek → Treść formularza
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewCreateTrip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/bottom_nav_padding">

            <!-- ================================== -->
            <!-- HEADER IMAGE - 35% wysokości ekranu -->
            <!-- ================================== -->
            <FrameLayout
                android:id="@+id/headerImageContainer"
                style="@style/HeaderImageContainer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.35">

                <ImageView
                    android:id="@+id/headerImage"
                    style="@style/HeaderImage"
                    android:src="@drawable/header_l_create_trip"/>
            </FrameLayout>

            <!-- ================================== -->
            <!-- NAGŁÓWEK WIDOKU -->
            <!-- ================================== -->
            <TextView
                android:id="@+id/title"
                style="@style/Text.Display"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/create_trip_title"
                android:gravity="center"
                android:layout_marginTop="@dimen/spacing_medium"
                app:layout_constraintTop_toBottomOf="@id/headerImageContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- ================================== -->
            <!-- TREŚĆ - Formularz tworzenia podróży -->
            <!-- ================================== -->

            <!-- Trip Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TripNameLayout"
                style="@style/InputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/TripNameInput"
                    style="@style/InputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/create_trip_name_hint"
                    android:inputType="textCapSentences"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Currency -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TripCurrencyLayout"
                style="@style/InputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                app:endIconMode="dropdown_menu"
                app:layout_constraintTop_toBottomOf="@id/TripNameLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9">

                <AutoCompleteTextView
                    android:id="@+id/TripCurrencyInput"
                    style="@style/InputEditText.Dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/create_trip_currency_hint"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Date Range -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TripDateLayout"
                style="@style/InputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                app:layout_constraintTop_toBottomOf="@id/TripCurrencyLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/TripDateInput"
                    style="@style/InputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/create_trip_date_hint"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Description -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TripDescriptionLayout"
                style="@style/InputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                app:layout_constraintTop_toBottomOf="@id/TripDateLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/TripDescriptionInput"
                    style="@style/InputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height_multiline"
                    android:hint="@string/create_trip_description_hint"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:scrollHorizontally="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Create Button -->
            <Button
                android:id="@+id/TripCreateBtn"
                style="@style/Button.Primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:text="@string/create_trip_button"
                app:layout_constraintTop_toBottomOf="@id/TripDescriptionLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
